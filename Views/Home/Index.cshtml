@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Global styles */

    section {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    /* Hero Section */
    .image-background {
        background-image: url('https://img.freepik.com/premium-photo/healthcare-pediatrician-child-heart-doctor-with-patient-hospital-exam-chest-with-stethoscope-black-girl-smile-pediatric-surgeon-talking-friendly-caring-physician-she-trust_590464-83537.jpg?w=996');
        background-size: cover;
        background-position: center;
        height: 100vh;
        position: relative;
    }

    .overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        background-color: rgba(0, 0, 0, 0.7);
        padding: 20px;
        color: white;
        border-radius: 10px;
    }

        .overlay h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .overlay p {
            font-size: 1.2rem;
        }

    /* Card Section */
    .card {
        border: none;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    /* Emergency Alert Section */
    .bg-warning {
        background-color: #ffc107 !important;
    }
</style>

<!-- Hero Section -->
<section class="image-background">
    <div class="overlay">
        <h1>Hospital Management System</h1>
        <p>Efficiently manage schedules, departments, and emergencies in a single platform.</p>
    </div>
</section>

<!-- Features Section -->
<section class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Schedules</h5>
                    <p class="card-text">Organize and monitor daily schedules for doctors, nurses, and other staff efficiently.</p>
                    <a href="@Url.Action("Schedule", "AssistantShift")" class="btn btn-primary">View Schedules</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Faculty Members</h5>
                    <p class="card-text">Track Faculty Members info.<br> <br/></p>
                    <a href="@Url.Action("Index", "FacultyMember")" class="btn btn-primary">Manage Patients</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Department Overview</h5>
                    <p class="card-text">Access detailed information about departments, staff, and equipment availability.</p>
                    <a href="@Url.Action("Index", "Department")" class="btn btn-primary">Explore Departments</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Emergency Alerts -->
<section class="bg-warning text-dark py-5">
    <div class="container">
        <h2 class="text-center">Emergency Alerts</h2>
        <p class="text-center">Stay informed about critical alerts and notifications from hospital administration.</p>
        <div class="text-center">
            <a href="@Url.Action("Index", "Emergency")" class="btn btn-danger">View Alerts</a>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section class="container my-5">
    <h2 class="text-center">Contact Us</h2>
    <p class="text-center">For assistance, contact our support team available 24/7.</p>
    <div class="text-center">
        <a href="/Contact" class="btn btn-secondary">Contact Support</a>
    </div>
</section>

<!-- Bootstrap JS (Optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
