@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<h2>Randevu Al</h2>

<form>
    <div class="mb-3">
        <label for="assistantName" class="form-label">Asistan Adı</label>
        <input type="text" class="form-control" id="assistantName" placeholder="Asistan adınızı giriniz">
    </div>

    <div class="mb-3">
        <label for="professorName" class="form-label">Hoca Seçiniz</label>
        <select class="form-select" id="professorName">
            <option selected>Mehmet Demir - Çocuk Kardiyoloji</option>
            <option>Fatma Öztürk - Çocuk Nefroloji</option>
            <!-- Add more professors dynamically later -->
        </select>
    </div>

    <div class="mb-3">
        <label for="appointmentDate" class="form-label">Randevu Tarihi</label>
        <input type="date" class="form-control" id="appointmentDate">
    </div>

    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>
