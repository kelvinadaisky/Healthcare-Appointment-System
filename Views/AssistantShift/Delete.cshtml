@model Web_prog_Project.Models.AssistantShift

<div class="container mt-4">
    <h2 class="text-danger mb-4">Delete Shift</h2>

    <form method="post" asp-action="Delete" class="p-4 shadow-sm rounded bg-light">
        <input asp-for="AssistantId" hidden />

        <div class="border p-3">
            <div class="row pb-2">
                <h4>Are you sure you want to delete this shift?</h4>
                <hr />
            </div>

            <!-- Shift Date -->
            <div class="mb-3 row p-1">
                <label asp-for="ShiftDate" class="form-label fw-bold">Shift Date</label>
                <input asp-for="ShiftDate" class="form-control" disabled />
            </div>

            <!-- Start Time -->
            <div class="mb-3 row p-1">
                <label asp-for="StartTime" class="form-label fw-bold">Start Time</label>
                <input asp-for="StartTime" class="form-control" disabled />
            </div>

            <!-- End Time -->
            <div class="mb-3 row p-1">
                <label asp-for="EndTime" class="form-label fw-bold">End Time</label>
                <input asp-for="EndTime" class="form-control" disabled />
            </div>

            <!-- Assistant -->
            <div class="mb-3 row p-1">
                <label asp-for="AssistantId" class="form-label fw-bold">Assistant</label>
                <input asp-for="Assistant.FirstName" class="form-control" disabled />
            </div>

            <!-- Department -->
            <div class="mb-3 row p-1">
                <label asp-for="DepartmentId" class="form-label fw-bold">Department</label>
                <input asp-for="Department.Name" class="form-control" disabled />
            </div>

            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="AssistantShift" asp-action="List" class="btn btn-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .form-text {
        font-size: 0.875em;
    }

    .form-label.fw-bold {
        font-weight: 600;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>
