@model Department

<form method="post">
    <input asp-for="DepartmentId" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Department</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <!-- Available Beds -->
        <div class="mb-3 row p-1">
            <label asp-for="AvailableBeds" class="p-0"></label>
            <input asp-for="AvailableBeds" disabled class="form-control" type="number" />
            <span asp-validation-for="AvailableBeds" class="text-danger"></span>
        </div>

        <!-- Number of Patients -->
        <div class="mb-3 row p-1">
            <label asp-for="NumberOfPatients" class="p-0"></label>
            <input asp-for="NumberOfPatients" disabled class="form-control" type="number" />
            <span asp-validation-for="NumberOfPatients" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Department" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}