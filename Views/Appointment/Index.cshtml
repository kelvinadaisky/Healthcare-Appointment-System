﻿@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<div class="row">

    @if (TempData.ContainsKey("newAdminSignUp"))
    {
        <div class=container>
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                <strong>Account created for @TempData["newAdminSignUp"].ToString() </strong>
            </div>
        </div>
    }

    <div class="container">
        @if (User.IsInRole(Web_prog_Project.Utility.Helper.Admin))
        {
            <div class="row">
                <div class="form-group  col-4" id="divDoctorList">
                    <label> Select Doctor</label>
                    @Html.DropDownList("doctorId", new SelectList(ViewBag.DoctorList, "Id", "Name"), new
                        {
                            @class = "form-control select2",
                            @onchange = "onDoctorChange();"
                        })
                </div>
                <div class="col-3 offset-5">
                    <a asp-controller="Account" asp-action="Register" class="btn-secondary form-control">Admin Registration</a>
                </div>
            </div>
        }
        <div id="calendar"></div>
    </div>
</div>

<partial name="_AddEditAppointment" />

<script>
    // Inline script to handle doctor changes
    function onDoctorChange() {
        console.log("Doctor changed");
        if (typeof calendar !== 'undefined' && calendar) {
            calendar.refetchEvents();
        }
        // Assuming you have the doctor ID from the dropdown, you can call getEventDetailsByEventId here
        var doctorId = document.getElementById('doctorId').value;
        getEventDetailsByEventId(doctorId);  // Call the function with the doctor ID
    }

    // Function to get event details by event ID
    function getEventDetailsByEventId(info) {
    $.ajax({
        url: routeURL + '/api/Appointment/GetCalendarDataById/' + info.id,
        type: 'GET',
        dataType: 'JSON',
        success: function (response) {

            if (response.status === 1 && response.dataenum !== undefined) {
                onShowModal(response.dataenum, true);
            }
            successCallback(events);
        },
        error: function (xhr) {
            $.notify("Error", "error");
        }
    });
}
</script>