@{
    ViewBag.Title = "Assistant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Assistant>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Assistant List
            </h2>
        </div>
        @if (User.IsInRole(Web_prog_Project.Utility.Helper.Admin))
        {
            <div class="col-6 text-end">
                <a asp-controller="Assistant" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Assistant
                </a>
            </div>
        }
       
    </div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Telefon</th>
            <th>E-mail</th>
        </tr>
    </thead>
    <tbody>
           @foreach(var obj in Model)
        {
        <tr>
        <td>@obj.FirstName</td>
        <td>@obj.LastName</td>
        <td>@obj.Phone</td>
        <td>@obj.Email</td>

        @if (User.IsInRole(Web_prog_Project.Utility.Helper.Admin))
        {
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Assistant" asp-action="Edit" asp-route-id="@obj.AssistantId" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Assistant" asp-action="Delete" asp-route-id="@obj.AssistantId" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </div>
            </td>
        }

      
                    
        </tr>
        }
       

    </tbody>
</table>

</div>