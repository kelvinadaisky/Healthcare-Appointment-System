﻿@{
    ViewBag.Title = "Assistant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Assistant>

<div class="container">
    <div class="row pt-4">
        <div class="col-md-6">
            <h2 class="text-primary">
                Assistant List
            </h2>
        </div>
        @if (User.IsInRole(Web_prog_Project.Utility.Helper.Admin))
        {
            <div class="col-md-6 text-end">
                <a asp-controller="Assistant" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Assistant
                </a>
            </div>
        }
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-hover align-middle text-center">
            <thead class="table-primary">
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Phone</th>
                    <th>Email</th>
                    @if (User.IsInRole(Web_prog_Project.Utility.Helper.Admin))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            @if ((User.IsInRole(Web_prog_Project.Utility.Helper.Admin) || User.IsInRole(Web_prog_Project.Utility.Helper.Assistant) || User.IsInRole(Web_prog_Project.Utility.Helper.Doctor)))
            {
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.FirstName</td>
                            <td>@obj.LastName</td>
                            <td>@obj.Phone</td>
                            <td>@obj.Email</td>
                            @if (User.IsInRole(Web_prog_Project.Utility.Helper.Admin))
                            {
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <a asp-controller="Assistant" asp-action="Edit" asp-route-id="@obj.AssistantId" class="btn btn-sm btn-primary mx-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-controller="Assistant" asp-action="Delete" asp-route-id="@obj.AssistantId" class="btn btn-sm btn-danger mx-1">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            }
            
        </table>
    </div>
</div>