@{
    ViewBag.Title = "Assistant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Assistant>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

</style>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Bölüm</th>
            <th>Telefon</th>
            <th>E-mail</th>
        </tr>
    </thead>
    <tbody>
           @foreach(var obj in Model)
        {
        <tr>
        <td>@obj.FirstName</td>
        <td>@obj.LastName</td>
        <td>@obj.Specialization</td>
        <td>@obj.Phone</td>
        <td>@obj.Email</td>
        </tr>
        }
       

    </tbody>
</table>