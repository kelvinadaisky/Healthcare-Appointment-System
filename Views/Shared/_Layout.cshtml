<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KidCare Navigator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
       
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        .custom-navbar {
            background-color: dodgerblue;
            position: absolute;
            top: 0;
            width: 100%;
            z-index: 1;

        }
        .custom-navbar .nav-link {
            color: white;
        }

        .custom-navbar .nav-link.btn-custom {
            padding: 5px 10px;
            margin-left: 10px;
            border-radius: 5px;
            color: aqua;
            background-color: dodgerblue;
            border: 1px solid aqua;
            transition: background-color 0.3s, color 0.3s;
        }

        .custom-navbar .nav-link.btn-custom:hover {
            background-color: aqua;
            color: white;
            border-color: aqua;
        }

        .custom-navbar .nav-link.btn-custom.signup{
            padding: 5px 10px;
            margin-left: 10px;
            border-radius: 5px;
            color: white;
            background-color: aqua;
            border: 1px solid aqua;
            transition: background-color 0.3s, color 0.3s;
        }

        .custom-navbar .nav-link.btn-custom.signup:hover {
        background-color: white;
        color: aqua;
        border-color: white;
        }
        .footer {
            background-color: #e6e6e6;
            padding:25px;
        }

        .render{
            margin:0;
            background-size: cover;
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg custom-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("")">KidCare Navigator</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Assistants", "Home")">Assistants</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Professors", "Home")">Professors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Departments", "Home")">Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Schedule", "Home")">Schedule</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Appointments", "Home")">Appointments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Emergencies", "Home")">Emergencies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-custom" href="@Url.Action("Login", "Home")">Log in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-custom signup" href="@Url.Action("SignUp", "Home")">Sign up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid render">
        @RenderBody()
    </div>


